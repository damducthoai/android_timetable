<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="butchjgo.com.finalproject.SlotDetail">

    <TextView
        android:id="@+id/slotNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/spDayOfWeek"
        android:layout_marginTop="39dp"
        android:layout_toStartOf="@+id/spSlotNum"
        android:paddingLeft="20dp"
        android:text="Slot num"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnOK"
        android:layout_below="@+id/slotNumLabel"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSubject"
        android:layout_below="@+id/txtSubject"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="saveData"
        android:text="Save" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtSubject"
        android:layout_marginStart="36dp"
        android:layout_marginTop="13dp"
        android:text="Subject"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLocation"
        android:layout_alignBottom="@+id/txtLocation"
        android:layout_alignEnd="@+id/textView3"
        android:text="Location"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spSlotNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slotNumLabel"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textView3"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/activeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnOK"
        android:layout_alignEnd="@+id/btnOK"
        android:layout_marginBottom="62dp"
        android:text="Active" />

    <EditText
        android:id="@+id/txtNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtLocation"
        android:layout_below="@+id/txtLocation"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNote"
        android:layout_alignBottom="@+id/txtNote"
        android:layout_alignEnd="@+id/textView4"
        android:text="Note"
        android:textSize="24sp" />

</RelativeLayout>
